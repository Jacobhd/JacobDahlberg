extends layout.pug

block content

  article.portfolio-intro

    h1 Let's make the web great together!
    p Welcome to my Portfolio page for Treehouse Fullstack JavaScript Techdegree
    //-a.btn-link(href='https://teamtreehouse.com/home', target="_blank") Treehouse

  article.portfolio-project-thumbs
    .projects-box.box.grid

      each project in projects
        .cell
          a(href='/projects/' + project.id)
            img.thumbnail(src=project.image_urls[0])
            h5= project.project_name

